@model Login

@{
    ViewData["Title"] = "Change Password";

}

<h1 class="display-4">Change Password (@Model.CustomerID)</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="CurrentPassword" class="control-label">Current Password</label>
                <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control"
                       data-val="true" data-val-required="The Current Password field is required." />
                @Html.ValidationMessage("CurrentPassword", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="NewPassword" class="control-label">New Password</label>
                <input type="password" id="NewPassword" name="NewPassword" class="form-control"
                       data-val="true" data-val-required="The New Password field is required." />
                @Html.ValidationMessage("NewPassword", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="NewPassword2" class="control-label">Re-enter Password</label>
                <input type="password" id="NewPassword2" name="NewPassword2" class="form-control"
                       data-val="true" data-val-required="The Re-entered New Password field is required." />
                @Html.ValidationMessage("NewPassword2", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyProfile">Back to My Profile</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        /* await Html.RenderPartialAsync("_ValidationScriptsPartial"); */
    }
}
